<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 进度百分比文字大小 -->
    <attr name="chestnut_photo_view_percent_text_size" format="dimension" />
    <!-- 圆形进度条边框大小 -->
    <attr name="chestnut_photo_view_stroke_width" format="dimension" />
    <!-- 矩形进度条 四周圆角大小 -->
    <attr name="chestnut_photo_view_rect_round" format="dimension" />
    <!-- 矩形进度条 是空心样式还是实心样式 -->
    <attr name="chestnut_photo_view_isHorizonStroke" format="boolean" />
    <!-- 进度百分比文字颜色 -->
    <attr name="chestnut_photo_view_percent_text_color" format="color|integer" />
    <!-- 进度条背景颜色 -->
    <attr name="chestnut_photo_view_progressBarBgColor" format="color|integer" />
    <!-- 扇形进度条颜色 -->
    <attr name="chestnut_photo_view_sectorColor" format="color|integer" />
    <!-- 扇形背景颜色 -->
    <attr name="chestnut_photo_view_unSweepColor" format="color|integer" />
    <!-- 进度颜色 -->
    <attr name="chestnut_photo_view_progressColor" format="color|integer" />
    <!-- 进度条样式圆形还是矩形 -->
    <attr name="chestnut_photo_view_orientation">
        <enum name="horizontal" value="0"/>
        <enum name="circle" value="1"/>
        <enum name="sector" value="2"/>
    </attr>
    <declare-styleable name="chestnut_photo_view_CBProgressBar">
        <attr name="chestnut_photo_view_percent_text_size"/>
        <attr name="chestnut_photo_view_isHorizonStroke"/>
        <attr name="chestnut_photo_view_percent_text_color"/>
        <attr name="chestnut_photo_view_progressBarBgColor"/>
        <attr name="chestnut_photo_view_progressColor"/>
        <attr name="chestnut_photo_view_sectorColor"/>
        <attr name="chestnut_photo_view_unSweepColor"/>
        <attr name="chestnut_photo_view_orientation"/>
        <attr name="chestnut_photo_view_stroke_width"/>
        <attr name="chestnut_photo_view_rect_round"/>
    </declare-styleable>
</resources>
